<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nati"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/palette_turquoise"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card: Learning Resources -->
            <androidx.cardview.widget.CardView
                android:id="@+id/learning_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imglearning"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/happy" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/cardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imglearning"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif"
                        android:text="Learning Resources"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Description -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imglearning"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/cardTitle"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="Valuable learning resources to stay informed toward your journey of sustainability."
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card: Market Trends -->
            <androidx.cardview.widget.CardView
                android:id="@+id/market_trends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgmarket"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:src="@mipmap/idea" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/marketTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgmarket"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="sans-serif"
                        android:text="Market Trends"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/marketDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/imgmarket"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/marketTitle"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="Recommendation and introduction to eco-friendly products and services."
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
