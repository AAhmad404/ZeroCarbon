<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/palette_turquoise"
    tools:context=".FarmersFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            tools:context=".Details">

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                app:cardElevation="60dp"
                app:cardCornerRadius="20dp">


                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/farmers" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="70dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                app:cardElevation="60dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:text="Support Farmers"
                    android:textColor="@color/palette_turquoise"

                    android:textSize="34sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="260dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                app:cardElevation="60dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/detailsParapgraph"
                    android:layout_width="280dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="Trees for the Future is a registered 501(c)(3) nonprofit organization, that provides hands-on agroforestry training and resources to farming communities. Thorugh through training Trees for the Future helps fight climate change, reduce poverty,  and develop economic growth within communities."
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="70dp"
                app:cardElevation="60dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/bt5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/lk5"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>